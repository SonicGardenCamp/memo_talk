<% content_for(:title, @question.title ) %>

質問者の名前: <%= @user.name %>
タイトル: <%= @question.title %>
質問内容: <%= @question.description %>

<%= simple_form_for [@question, @answer] do |f| %>
  <%= f.input :name %>
  <%= f.input :description %>
  <%= f.button :submit, '回答する' %>
<% end %>
回答数: <%= @question.answers.length %><br>
<% @question.answers.each do |answer| %>
  回答者の名前: <%= answer.name %>
  回答内容: <%= answer.description %>
  <br>
<% end %>
