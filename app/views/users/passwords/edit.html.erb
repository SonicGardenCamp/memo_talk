<h2>パスワード変更</h2>

<%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), method: :put) do |f| %>
  <%= render "users/shared/error_messages", resource: resource %>
  <%= f.input :reset_password_token, as: :hidden %>

  <div class="field">
    <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> characters minimum)</em><br>
    <% end %>
    <%= f.input :password, autofocus: true, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.input :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="actions">
    <%= f.button :submit, "Change my password" %>
  </div>
<% end %>

<%= render "users/shared/links" %>

