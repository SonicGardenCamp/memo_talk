<!-- PATH:/users/edit -->
<!-- Edit <%= resource_name.to_s.humanize %> -->

<h2>登録情報の変更</h2>

<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), method: :put) do |f| %>
  <%= render "users/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.input :email, autofocus: true, autocomplete: "email" %>
  </div>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% end %>

  <div class="field">
    <%= f.input :password, autocomplete: "new-password" %>
    
  </div>

  <div class="field">
    <%= f.input :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <% if @minimum_password_length %>
      <br>
      (<%= @minimum_password_length %>文字以上で設定してください)
    <% end %>
    <%= f.input :current_password, autocomplete: "current-password", input_html: { type: :password } %>
  </div>

  <div class="actions">
    <%= f.button :submit, "更新" %>
  </div>
<% end %>

<h3>ユーザーの消去</h3>

<div>Unhappy? <%= button_to "アカウント消去", registration_path(resource_name), data: { confirm: "本当に消去しますか?", turbo_confirm: "本当に消去しますか?" }, method: :delete %></div>

<%= link_to "戻る", :back %>

