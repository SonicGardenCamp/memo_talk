<div class="container mt-5 pt-5">
  <div class="row justify-content-center">
    <h2 class="text-center mb-5">ログイン</h2>
    
    <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="field col-md-6 offset-md-3">
        <%= f.input :email, autofocus: true, autocomplete: "email" %>
      </div>
    
      <div class="field col-md-6 offset-md-3">
        <%= f.input :password, autocomplete: "current-password" %>
      </div>
    
      <% if devise_mapping.rememberable? %>
        <div class="field col-md-6 offset-md-3">
          <%= f.input :remember_me, as: :boolean, label: "ログイン状態を保持する"%>
        </div>
      <% end %>
    
      <div class="actions text-center mt-4 mb-5">
        <%= f.button :submit, "ログイン", class: "btn btn-outline-success" %>
      </div>
    <% end %>
    <div class="text-center">
       <%= link_to "パスワードをお忘れの方", new_password_path(resource_name), class: "btn btn-outline-secondary"%>
    </div>
  </div>
</div>
