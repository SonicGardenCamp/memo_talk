<% if @comment.reacted_by?(current_user) %>
  <%= link_to comment_reactions_path(@comment), data: { "turbo-method": :delete } do %>
    いいね済
    <%= @comment.reactions.count %>
  <% end %>
<% else %>
  <%= button_to comment_reactions_path(@comment), data: { "turbo-method": :post } do %>
    未いいね
    <%= @comment.reactions.count %>
  <% end %>
<% end %>
