<% content_for(:title, "ユーザー一覧") %>

<div class="m-3 mt-5">
  <h2>ユーザー一覧</h2>

  <% if @users.present? %>
    <table class="table">
      <thead>
        <tr>
          <th scope="col">#</th>
          <th scope="col">名前</th>
          <th scope="col">メールアドレス</th>
          <th scope="col">アクション</th>
        </tr>
      </thead>
      <tbody>
        <% @users.each do |user| %>
          <tr>
            <th scope="row"><%= user.id %></th>
            <td><%= user.name %></td>
            <td><%= user.email %></td>
            <td>
              <%= link_to "編集", edit_admins_user_path(user), class: "btn btn-success" %>
              <%= button_to "削除", admins_user_path(user), data: { confirm: "本当に削除しますか?", turbo_confirm: "本当に削除しますか?" }, method: :delete, class: "btn btn-danger" %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  <% else %>
    ユーザーが登録されていません。
  <% end %>
</div>

