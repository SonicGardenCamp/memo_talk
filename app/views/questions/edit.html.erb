<% content_for(:title, "質問編集") %>

<div class="m-3 mt-5">
  <h2 class="mb-5"><%= @question.title%>の編集</h2>
  <div class="text-end show_time">
    更新日時: <%= l @question.updated_at, format: :short %>
  </div>
  <%= simple_form_for @question do |f| %>
    <%= f.input :title, required: false %>
    <%= f.input :description, input_html: { rows: 18 }, required: false %>
    <div class="text-center">
     <%= f.button :submit, '質問する', class: "btn btn-success" %>
    </div>
  <% end %>
</div>
