<% content_for(:title, "新規登録") %>

<div class="container mt-5 pt-5">
  <div class="row justify-content-center">
    <h2 class="text-center">新規登録</h2>
      <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <div class="field col-md-6 offset-md-3">
          <%= f.input :name, autofocus: true, autocomplete: "name", required: false %>
        </div>
        <div class="field col-md-6 offset-md-3">
          <%= f.input :email, autocomplete: "email"%>
        </div>

        <div class="field col-md-6 offset-md-3">
          <%= f.input :password, autocomplete: "new-password" %>
        </div>
      
        <div class="field col-md-6 offset-md-3">
          <%= f.input :password_confirmation, autocomplete: "new-password" %>
        </div>
      
        <div class="field col-md-6 offset-md-3">
          ユーザー画像の設定<br>
          <%= f.file_field :image %>
        </div>
        
        <div class="actions text-center">
          <%= f.button :submit, "新規登録", class: "btn btn-outline-primary" %>
        </div>
        
      <% end %>
      <div class="text-center">
        <%= link_to "ログイン", new_session_path(resource_name), class: "btn btn-outline-succsess" %>
      </div>

      <div class="field col-md-6 offset-md-3">
        <%= f.input :password, autocomplete: "new-password" %>
      </div>
    
      <div class="field col-md-6 offset-md-3">
        <%= f.input :password_confirmation, autocomplete: "new-password" %>
      </div>
    
      <div class="actions text-center mt-5">
        <%= f.button :submit, "新規登録", class: "btn btn-outline-primary" %>
      </div>
    <% end %>
  </div>
</div>
