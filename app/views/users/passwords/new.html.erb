<!-- PATH:/users/password/new -->

<div class="container mt-5 pt-5">

<h2 class="text-center">パスワード再設定</h2>

<%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), method: :post) do |f| %>
  <%= render "users/shared/error_messages", resource: resource %>

  <div class="field col-md-6 offset-md-3">
    <%= f.input :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="actions">
    <%= f.button :submit, "再設定用のメールを送信" %>
  </div>
<% end %>

<%= render "users/shared/links" %>
</div>

