<% content_for(:title, @memo.title ) %>
<div class="m-3 mt-5">
  <h2><%= @memo.title%></h2>
  <div class="text-end show_time">
    更新日時: <%= l @memo.updated_at, format: :short %>
  </div>
  <div class="card mt-5">
    <div class="card-header">
      <div class="d-flex justify-content-end gap-2">
        <%= link_to '編集', edit_memo_path(@memo), class: "btn btn-success"%>
        <%= button_to '削除', memo_path(@memo), data: { confirm: "本当に削除しますか?", turbo_confirm: "本当に削除しますか?"},  method: :delete, class: "btn btn-danger"%>
      </div>
    </div>
    <div class="card-body">
      <%= markdown(@memo.description)%>
    </div>
  </div>
</div>
